{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Prism Configuration",
    "type": "object",
    "properties": {
        "project_name": {
            "type": "string"
        },
        "theme_preset": {
            "type": "string",
            "enum": [
                "clinical",
                "playful",
                "luxury",
                "organic"
            ]
        },
        "compliance_mode": {
            "type": "string",
            "enum": [
                "none",
                "supplements",
                "pet_food"
            ]
        },
        "brand_colors": {
            "type": "object",
            "properties": {
                "primary": {
                    "type": "string"
                },
                "secondary": {
                    "type": "string"
                }
            }
        },
        "niche": {
            "type": "object",
            "properties": []
        }
    },
    "required": [
        "project_name",
        "theme_preset",
        "compliance_mode",
        "brand_colors"
    ]
}